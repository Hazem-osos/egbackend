# ============================================
# DATABASE CONFIGURATION
# ============================================
# Option 1: Use DATABASE_URL directly (must start with mysql://)
DATABASE_URL=mysql://username:password@host:port/database?ssl-mode=REQUIRED

# Option 2: Use individual database variables (recommended for Aiven)
# If DATABASE_URL is not set, the code will construct it from these variables
DB_HOST=your-database-host.aivencloud.com
DB_PORT=11706
DB_USER=avnadmin
DB_PASSWORD=your_database_password
DB_DATABASE=defaultdb
DB_SSL_CA_CERT=-----BEGIN CERTIFICATE-----\nYour SSL Certificate Here\n-----END CERTIFICATE-----

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5001

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
NEXTAUTH_SECRET=your_nextauth_secret_key_change_this_in_production

# ============================================
# FRONTEND URL
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# CLOUDINARY (for file/image uploads)
# ============================================
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# STRIPE (for payments - optional)
# ============================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# AWS S3 (optional - if using S3 instead of Cloudinary)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_bucket_name

# ============================================
# EMAIL (optional - if using nodemailer)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# ============================================
# GOOGLE OAUTH (optional)
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
